# Vantus Vector Platform Environment Variables

# Infrastructure
DOMAIN=localhost
TLS_MODE=self-signed  # or lets-encrypt
DATA_DIR=./data

# Secrets (Change these in production!)
POSTGRES_PASSWORD=postgres_secret
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_secret
OPENSEARCH_INITIAL_ADMIN_PASSWORD=Opensearch_secret_1!
REDIS_PASSWORD=redis_secret
JWT_SECRET=super_secret_jwt_key_change_me
ADMIN_INITIAL_PASSWORD=admin_password

# Postgres
POSTGRES_USER=postgres
POSTGRES_DB=vantus

# Service Limits
OPENSEARCH_JAVA_OPTS=-Xms512m -Xmx512m
WORKER_CONCURRENCY=4

# Embeddings/Rerank Providers (Defaults)
EMBEDDING_PROVIDER=local_cpu
RERANK_PROVIDER=local_cpu
OPENROUTER_API_KEY=
